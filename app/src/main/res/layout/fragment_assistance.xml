<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentMenu.fragment_assistance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:paddingRight="20dp"
            android:text="Pour toute demande d'assistance ou d'information, veuillez contacter notre Centre de Relation Client au :"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="0522588855"
            android:textColor="#0B0A0A"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/alarm_icon"
            android:gravity="center"
            android:text="9h00 - 17h30"
            android:layout_marginBottom="5dp"
            android:textColor="#D88585"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="180dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Lundi - Vendredi"
            android:textColor="#676161"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_appeler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape5"
            android:text="Appeler"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>